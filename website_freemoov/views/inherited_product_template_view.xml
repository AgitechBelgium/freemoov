<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_public_category_form_view_freemov" model="ir.ui.view">
        <field name="name">product.public.category.freemov.form</field>
        <field name="model">product.public.category</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="website_sale.product_public_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sequence']" position="after">
                <field name="brand_ids"/>
                <field name="category_description"/>
            </xpath>
        </field>
    </record>
	<record id="inherit_product_template_view" model="ir.ui.view">
        <field name="name">product.template.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                   <field name="pro_description"/>
                   <field name="delivery_return"/>
                   <field name="warranty_support"/>
                   <field name="summary" />
                   <field name="is_dropship_product"/>
            </xpath>
           <xpath expr="//field[@name='attribute_line_ids']/tree/field[@name='value_ids']" position="after">
                <field name="attribute_default_val" domain="[('id','in',value_ids)]" />
           </xpath>
        </field>
    </record>
</odoo>