	<template id="blog_slider" name="Brand Slider">
		<t t-foreach="ust_s_main.blog_ids" t-as="record">
			<div class="s_blog_posts_post w-100 h-100">
	            <div class="card h-100">
	                <a class="s_blog_posts_post_cover" t-attf-href="/blog/#{slug(record.blog_id)}/#{slug(record)">
	                    <t t-call="website.record_cover">
