	<template id="category_slider" name="Category Slider">
		<t t-as="cat" t-foreach="ust_s_main.category_ids">
			<div class="ust-cat-slider">
				<a t-att-href=" '/shop/category/%s' % slug(cat)" class="nav-link slider-img">
					<img t-att-alt="cat.name" t-att-src="website.image_url(cat, 'image_1920')" t-att-title="cat.name" class="img img-fluid"/>
					<p class="slider_name">
						<t t-esc="cat.name"/>
					</p>
				</a>
			</div>
		</t>
	</template>

	<template id="category_grid" name="Category Grid">
		<t t-set="category_count" t-value="1"/>
		<t t-as="grid_data" t-foreach="ust_s_main.category_ids">
			<div t-if="category_count == 1" class="col-lg-6 pt16 pb16">
				<div class="ust-cat-grid">
					<a t-att-href=" '/shop/category/%s' % slug(grid_data)" class="nav-link grid-img">
						<img class="img img-fluid" t-att-alt="grid_data.name" t-att-src="website.image_url(grid_data, 'image_1920')" t-att-title="grid_data.name"/>
						<p class="grid_data">
							<t t-esc="grid_data.name"/>
						</p>
					</a>
				</div>
			</div>
			<div t-elif="category_count == 2" class="col-6 pt16 pb16">
				<div class="ust-cat-grid">
					<a t-att-href=" '/shop/category/%s' % slug(grid_data)" class="nav-link grid-img">
						<img class="img img-fluid" t-att-alt="grid_data.name" t-att-src="website.image_url(grid_data, 'image_1920')" t-att-title="grid_data.name"/>
						<p class="grid_data">
							<t t-esc="grid_data.name"/>
						</p>
					</a>
				</div>
			</div>
			<div t-else="" class="col-6 col-lg-4 pt16 pb16">
				<div class="ust-cat-grid">
					<a t-att-href=" '/shop/category/%s' % slug(grid_data)" class="nav-link grid-img">
						<img class="img img-fluid" t-att-alt="grid_data.name" t-att-src="website.image_url(grid_data, 'image_1920')" t-att-title="grid_data.name"/>
						<p class="grid_data">
							<t t-esc="grid_data.name"/>
						</p>
					</a>
				</div>
			</div>

			<t t-set="category_count" t-value="category_count + 1"/>
			<t t-if="category_count == 6">
				<t t-set="category_count" t-value="1"/>
			</t>
		</t>
	</template>

	<template id="brand_slider" name="Brand Slider">
		<t t-as="brand" t-foreach="ust_s_main.brand_ids">
			<div class="ust-brand-slider">
				<a t-att-href="'/shop?brand=%s' % (brand.id)" class="nav-link slider-img">
					<img t-att-alt="brand.name" t-att-src="website.image_url(brand, 'brand_image')" t-att-title="brand.name" class="img img-fluid"/>
					<p class="slider_data">
						<t t-esc="brand.name"/>
					</p>
				</a>
			</div>
		</t>
	</template>

