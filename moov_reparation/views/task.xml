<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data>
		<record id="view_project_task_moov_reparation_resource" model="ir.ui.view">
            <field name="name">project.task.reparation.number</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">
	            <xpath expr="//div[hasclass('oe_title')]//h1" position="before">
		            <h2><field name="reparation_number" readonly="1" force_save="1"/></h2>
	            </xpath>
            </field>
		</record>

		<record id="view_project_task_moov_reparation_resource_tree2" model="ir.ui.view">
            <field name="name">project.task.reparation.number.tree</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2" />
            <field name="arch" type="xml">
	            <field name="priority" position="after">
		            <field name="reparation_number"/>
	            </field>
            </field>
		</record>

		<record id="view_project_task_moov_reparation_resource_sharing_task_tree2" model="ir.ui.view">
            <field name="name">project.task.reparation.number.sharing.task.tree</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.project_sharing_project_task_view_tree" />
            <field name="arch" type="xml">
	            <field name="sequence" position="after">
		            <field name="reparation_number"/>
	            </field>
            </field>
		</record>

		<record id="view_project_task_moov_reparation_resource_activity_task_tree2" model="ir.ui.view">
            <field name="name">project.task.reparation.number.activity.task.tree</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.project_task_view_tree_activity" />
            <field name="arch" type="xml">
	            <field name="name" position="before">
		            <field name="reparation_number"/>
	            </field>
            </field>
		</record>
	</data>
</odoo>